<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c7"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/c7"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="选择支付方式"
        />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/c8"
        android:layout_height="50dp">
        
        <ImageView
            android:id="@+id/img_ali"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/dubbing_icon_weixin"
           />

        <TextView
            android:layout_toRightOf="@id/img_ali"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="支付宝支付"
            />

        <ImageView
            android:id="@+id/ali_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/gd_selector_dowload"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:background="@color/c8"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/img_Wechat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/dubbing_icon_zhifubao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/img_Wechat"
            android:text="微信支付" />

        <ImageView
            android:id="@+id/wechat_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/gd_selector_dowload" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/finish_pay"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_corner"
            android:gravity="center"
            android:textColor="@color/c8"
            android:text="确认支付"/>
    </LinearLayout>
</LinearLayout>