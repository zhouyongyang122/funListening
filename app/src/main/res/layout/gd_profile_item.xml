<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/real"
            android:layout_width="60dp"
            android:layout_centerVertical="true"
            android:background="@color/c1"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/coverUrl"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/pay_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tags_fufei_d"/>
            <TextView
                android:id="@+id/pay_tv"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="19dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9dp"
                android:textColor="@color/c8"
                android:text="付费"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@id/real"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="70dp">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="听欧美电影，轻松学英语"
                android:ellipsize="end"
                android:maxEms="14"
                android:maxLines="1"
                android:textColor="@color/black"/>
            <TextView
                android:layout_marginTop="7dp"
                android:layout_below="@id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="19"
                android:maxLines="1"
                android:textSize="12dp"
                android:text="开心听一听,快乐学习,爱不释耳的听觉感受"/>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_play_amount_d"
                    />
                <TextView
                    android:id="@+id/play_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:textSize="12dp"
                    android:text="30.1万"/>

                <TextView
                    android:id="@+id/audioCount"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/c1"
                    android:text="更新至30集"/>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/into_album_detail"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="0dp"
            android:gravity="center"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_rightxx"
                />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_marginTop="9dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/c6"
        android:layout_height="1px"/>

</LinearLayout>